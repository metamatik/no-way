---
pageable: true
---
<div id="calendar-content">
  <aside>
    <h1>Articles de
      <% case page_type
         when 'day' %>
        <%= Date.new(year, month, day).strftime('%b %e %Y') %>
      <% when 'month' %>
        <%= Date.new(year, month, 1).strftime('%b %Y') %>
      <% when 'year' %>
        <%= year %>
      <% end %>
    </h1>

    <%= partial 'blog/_paginate', :locals => { :prev_page => prev_page, :next_page => next_page, :page_number => page_number, :num_pages => num_pages } %>
  </aside>


  <% page_articles.each_with_index do |article, i| %>
      <article class="list-item">
        <h2><%= link_to article.title, article %><br /><span><%= article.date.strftime('%d.%m.%y') %></span></h2>
        <figure>
          <img src="<%= article.data.pictures[0] %>" />
        </figure>
      </article>
  <% end %>
</div>