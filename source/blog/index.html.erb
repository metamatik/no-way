---
pageable: true
per_page: 5
---
<% if paginate %>
  <%= partial "paginate", :locals => { :prev_page => prev_page, :next_page => next_page, :page_number => page_number, :num_pages => num_pages } %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
    <article>
      <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%d.%m.%y') %></span></h2>
      <!-- use article.summary(250) if you have Nokogiri available to show just
           the first 250 characters -->
      <%= article.summary %>
    </article>
<% end %>

<% if paginate %>
  <%= partial "paginate", :locals => { :prev_page => prev_page, :next_page => next_page, :page_number => page_number, :num_pages => num_pages } %>
<% end %>