---
pageable: true
per_page: 20
---

<%= partial "paginate", :locals => { :paginate => paginate, :prev_page => prev_page, :next_page => next_page, :page_number => page_number, :num_pages => num_pages } %>

<div id="blog-content" class="list-container">
  <% page_articles.each_with_index do |article, i| %>
      <article class="list-item">
        <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%d.%m.%y') %></span></h2>
        <figure>
          <img src="<%= article.data.pictures[0] %>" />
        </figure>
      </article>
  <% end %>
</div>
<script>
  $(document).ready(function() {
    var myWall = new Views.PictureWall($("#blog-content"), {
      item: ".list-item"
    });
  })
</script>
