<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
		<!-- Use title if it's in the page YAML frontmatter -->
		<title><%= data.page.title || "The Middleman" %></title>
		<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,200italic,400italic,700' rel='stylesheet' type='text/css'>
		<%= stylesheet_link_tag "normalize", "all" %>
		<%= javascript_include_tag  "all" %>
	</head>
	<body>

		<div class="page">

			<header>
				<nav>
					<ul>
						<li><a href="/" id="logo">no<small>way</small></a></li>
						<li><a href="/blog">blog</a></li>
					</ul>
				</nav>

				<aside>
					<ol>
						<% blog.tags.each do |tag, articles| %>
							<li><%= link_to tag, tag_path(tag) %></a></li>
						<% end %>
						<% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
							<li><%= link_to year, blog_year_path(year) %></a></li>
						<% end %>
					</ol>
				</aside>
			</header>

			<section id="main" role="main">
				<%= yield %>
			</section>

			<%= partial "footer" %>
		</div>
	</body>
</html>
