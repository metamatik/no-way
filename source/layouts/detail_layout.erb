<% wrap_layout :layout do %>

		<div id="article-content">

			<aside>
				<ul class="paginate-menu">
					<% if current_page.previous_article %>
					<li id="goto_prev"><%= link_to '&laquo; ' + current_page.previous_article.title, current_page.previous_article %></li>
					<% end %>

					<% if current_page.next_article %>
					<li id="goto_next"><%= link_to current_page.next_article.title + " &raquo;", current_page.next_article %></li>
					<% end %>
					</ul>
					<h2><%= current_page.data.title %></h2>
			</aside>
			<article>
				<%= yield %>
			</article>

			<figure>
				<div id="pictures-wall" class="wall">
				<% current_page.data.pictures.each do |src, i| %>
					<img src="<%= src %>" />
				<% end %>
				</div>
			</figure>
			<script>
				$(document).ready(function() {

					var myWall = new Views.PictureWall($("#pictures-wall"));
				})
			</script>
		</div>


		<footer>
			<h2>Articles r√©cents</h2>
			<ol>
				<% blog.articles[0...5].each do |article| %>
					<li><%= link_to article.title, article %> <span><%= article.date.strftime('%d.%m.%y') %></span></li>
				<% end %>
			</ol>
		</footer>
<% end %>
